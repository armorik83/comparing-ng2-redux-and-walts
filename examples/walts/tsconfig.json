{
    "compilerOptions": {
        "target": "es5",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "outDir": "./.tmp"
    },
    "filesGlob": [
        "./**/*.ts",
        "!./**/*.d.ts",
        "!./node_modules/**/*",
        "./node_modules/typescript/lib/lib.es6.d.ts"
    ],
    "files": [
        "./app/app.component.ts",
        "./index.ts",
        "./node_modules/typescript/lib/lib.es6.d.ts"
    ]
}
